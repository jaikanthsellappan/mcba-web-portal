@model IEnumerable<mcbaAdminPortal.Controllers.Payee>

<div class="container mt-4">
    <h2>Payees</h2>

    <form method="get" class="mb-3 d-flex gap-2">
        <input type="text" name="postcode" class="form-control" placeholder="Filter by postcode" />
        <button class="btn btn-outline-primary">Filter</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    else if (Model != null)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Postcode</th>
                    <th>Phone</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Name</td>
                        <td>@p.City</td>
                        <td>@p.State</td>
                        <td>@p.Postcode</td>
                        <td>@p.Phone</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@p.PayeeID" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
