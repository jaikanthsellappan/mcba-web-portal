@model mcbaMVC.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    var error = TempData["LoginError"] as string;
}

<!-- Bootstrap Icons -->
<link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
/>

<div class="login-split">
    <!-- Left half: background image -->
    <div class="login-image"></div>

    <!-- Right half: login form -->
    <div class="login-form-container d-flex align-items-center justify-content-center">
        <div class="login-card-wrapper">
            <div class="card shadow-lg border-0 rounded-4 p-5">
                <div class="text-center mb-3">
                    <h2 class="fw-bold mb-1">MCBA Internet Banking</h2>
                    <p class="text-muted mb-0">Secure access to your accounts</p>
                </div>

                @if (!string.IsNullOrWhiteSpace(error))
                {
                    <div class="alert alert-danger py-2" role="alert">
                        @error
                    </div>
                }

                <form asp-action="Index" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="mb-3">
                        <label asp-for="LoginId" class="form-label"></label>
                        <input asp-for="LoginId"
                               class="form-control form-control-lg"
                               placeholder="8-digit Login ID" />
                        <span asp-validation-for="LoginId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <div class="input-group input-group-lg position-relative">
                            <input asp-for="Password"
                                   id="Password"
                                   type="password"
                                   class="form-control"
                                   placeholder="Your password" />
                            <button type="button"
                                    id="togglePwd"
                                    class="btn btn-outline-secondary"
                                    tabindex="-1"
                                    aria-label="Show password">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 mt-3">Sign in</button>

                    <p class="text-center text-muted small mt-3 mb-0">
                        By signing in you agree to the MCBA Internet Banking Terms &amp; Conditions.
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        const btn = document.getElementById("togglePwd");
        const pwd = document.getElementById("Password");

        btn?.addEventListener("click", () => {
            const showing = pwd.type === "text";
            pwd.type = showing ? "password" : "text";
            btn.innerHTML = showing
                ? '<i class="bi bi-eye"></i>'
                : '<i class="bi bi-eye-slash"></i>';
        });
    </script>
}
