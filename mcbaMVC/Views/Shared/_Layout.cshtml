@using Microsoft.AspNetCore.Http
@using mcbaMVC.Infrastructure
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mcba</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mcbaMVC.styles.css" asp-append-version="true" />
</head>
<body>
@{
    var cid = Context.Session.GetInt32(SessionKeys.LoggedInCustomerId)
           ?? Context.Session.GetInt32("CustomerID");
    bool isLoggedIn = cid != null;

    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    bool isLoginPage = string.Equals(currentController, "Login", StringComparison.OrdinalIgnoreCase);
}

@if (!isLoginPage)
{
    <!-- ====== HEADER + NAVBAR ====== -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom py-1">
            <div class="container-fluid">
                <a class="navbar-brand small" asp-controller="Home" asp-action="Index">MCBA</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNav" class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link py-1" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item d-none d-sm-block me-2">
                                <a class="btn btn-sm btn-outline-primary profile-btn" asp-controller="Profile" asp-action="Index">My Profile</a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Home" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Login" asp-action="Index">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        @if (isLoggedIn)
        {
            <div class="subnav border-bottom bg-light">
                <div class="container py-2">
                    <div class="d-flex flex-wrap gap-2">
                        <a class="btn btn-outline-primary btn-sm" asp-controller="Transactions" asp-action="Deposit">Deposit</a>
                        <a class="btn btn-outline-primary btn-sm" asp-controller="Transactions" asp-action="Withdraw">Withdraw</a>
                        <a class="btn btn-outline-primary btn-sm" asp-controller="Transactions" asp-action="Transfer">Transfer</a>
                        <a class="btn btn-outline-primary btn-sm" asp-controller="BillPay" asp-action="Index">BillPay</a>
                        <a class="btn btn-outline-primary btn-sm" asp-controller="Statements" asp-action="SelectAccount">My Statements</a>
                        <a class="btn btn-outline-secondary btn-sm d-sm-none" asp-controller="Profile" asp-action="Index">My Profile</a>
                    </div>
                </div>
            </div>
        }
    </header>
}

<!-- ====== MAIN BODY ====== -->
<main role="main" class="pb-3">
    @RenderBody()
</main>

@if (!isLoginPage)
{
    <!-- ====== FOOTER ====== -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - mcbaMVC -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
