@model IEnumerable<mcbaMVC.Models.Account>
@{
    ViewData["Title"] = "Select Account";
}

<div class="transaction-page">
  <div class="transaction-card mx-auto shadow-sm p-4 rounded" style="max-width: 700px;">
    <h3>Select an Account</h3>
    <hr />
    <p class="text-muted mb-3">Choose which account youâ€™d like to view statements for:</p>

    <div class="list-group">
      @foreach (var acc in Model)
      {
          var accType = acc.AccountType switch
          {
              "C" => "Checking",
              "S" => "Savings",
              _   => acc.AccountType
          };

          <a asp-action="Index" 
             asp-route-accountNumber="@acc.AccountNumber"
             class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
              <div>
                  <div class="fw-semibold">Account @acc.AccountNumber</div>
                  <small class="text-muted">@accType Account</small>
              </div>
              <span class="btn btn-sm btn-outline-primary">View</span>
          </a>
      }
    </div>

    <div class="mt-4">
      <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Back to Accounts</a>
    </div>
  </div>
</div>
